<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Elemendid.Too">
    <ContentPage.Content>
        <StackLayout x:Name="stack">
            <StackLayout >
                <Label
                    x:Name="label_tere"
                    Text="Tere"
                    TextColor="Brown"
                    FontFamily="Arial"
                    FontSize="20"
                    />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button 
                    x:Name="btn_up"
                    Text="Surendame"
                    Clicked="btn_up_Clicked"
                    />
                <Button 
                    x:Name="btn_dn"
                    Text="Vähendame"
                    Clicked="btn_dn_Clicked"
                    />
            </StackLayout>
            <StackLayout >
                <Image 
                    x:Name="bob"
                    Source="bob.jpg"
                    />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>